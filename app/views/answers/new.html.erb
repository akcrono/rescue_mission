<%= form_for @answer do |f| %>
  <%= f.label :title %>:
  <%= f.text_field :title%> <br>

  <%= f.label :description %>
  <%= f.text_area :description, required: true %>

  <%= f.hidden_field :question_id, value: @question_id%>
  <%= f.hidden_field :user_id, value: current_user.id%>

  <%= f.submit%>
<%end%>
